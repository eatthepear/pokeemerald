script Zone17A_EventScript_RiddleSign {
	lock
	checkitem(ITEM_ODD_KEYSTONE, 1)
	if (var(VAR_RESULT) == TRUE) {
		msgbox("There is a spot that looks like it\ncan fit the Odd Keystone.\pWould you like to place the\nOdd Keystone?", MSGBOX_YESNO)
		if (var(VAR_RESULT) == YES) {
			goto(Zone17A_StartSpiritombBattle)
		}
	}
	if (var(VAR_ZONE_17_STATE) == 29) {
		goto(Zone17A_EventScript_InitiateLeviathanBattle)
	} else {
		msgbox(Zone17A_Text_RiddleSign, MSGBOX_SIGN)
	}
	release
	end

}

text Zone17A_Text_RiddleSign {
	"We celebrate the day of life\n"
	"With boundless splurge and wonder,\p"
	"We celebrate the day of death\n"
	"With rain, lightning, and thunder,\p"
	"Bring peace to those who still\n"
	"remember every cherished date,\p"
	"Another year of special days,\n"
	"They number twenty-eight."
}

