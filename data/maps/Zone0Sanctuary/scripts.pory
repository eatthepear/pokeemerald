mapscripts Zone0Sanctuary_MapScripts {
	MAP_SCRIPT_ON_FRAME_TABLE [
		VAR_ZONE, 0: Zone0Sanctuary_EventScript_Intro
	]
}

script Zone0Sanctuary_EventScript_Intro {
    lockall
	clearflag(FLAG_NUZLOCKE_ON)
	setflag(FLAG_SYS_B_DASH)
	setflag(FLAG_SYS_POKEMON_GET)
	setflag(FLAG_SYS_PC_LANETTE)
	call(EventScript_MoveCameraUp)
	applymovement(1, Common_Movement_ExclamationMark)
	playse(SE_PIN)
	waitmovement(0)
	waitse
	applymovement(OBJ_EVENT_ID_PLAYER, Common_Movement_FaceUp)
	msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Ah. You've arrived."))
	applymovement(1, Common_Movement_Colress_WalkDown)
	call(EventScript_MoveCameraDown)
	waitmovement(0)
	msgbox("Welcome to the\n{COLOR RED}Pokémon Battle Labyrinth{COLOR DARK_GRAY}.\pI am your guide for braving the\nchallenges ahead.\pWould you like to listen to the tutorial?", MSGBOX_YESNO)
	if (var(VAR_RESULT) == YES) {
		setvar(VAR_TEMP_0, 1)
		delay(96)
		msgbox(format("The Pokémon Battle Labyrinth is comprised of many {COLOR RED}Zones{COLOR DARK_GRAY} you must traverse.\p"
		"In these Zones, you might encounter wild Pokémon, great treasures, tough trainers, and more.\p"
		"Each Zone typically contains a {COLOR RED}Leviathan{COLOR DARK_GRAY}, a boss that yields great rewards if defeated.\p"
		"At the end of each Zone and before the next Zone begins, you will find a {COLOR RED}Sanctuary{COLOR DARK_GRAY}, like this one, with shops to purchase supplies, heal your Pokémon, and other benefits.\p"
		"Once you enter a new Zone, you will not be able to access a Sanctuary until you exit that Zone.\p"
		"In order to win, you must progress through all Zones without losing a battle."))
		delay(96)
	}
	msgbox(format("Would you like to listen to the difficulty options explanation?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == YES) {
		setvar(VAR_TEMP_1, 1)
	}
	while {
		if (var(VAR_TEMP_1) == 1) {
			msgbox(format("There are two game difficulty options: {COLOR RED}Default{COLOR DARK_GRAY} and {COLOR RED}Brutal{COLOR DARK_GRAY}."))
			msgbox(gText_Colress_DefaultExplained)
			msgbox(gText_Colress_BrutalExplained)
			delay(96)
		}
		msgbox(format("Which difficulty option would you like to play on?"), MSGBOX_DEFAULT)
		multichoice(2, 5, MULTI_DEFAULT_BRUTAL, 1)
		if (var(VAR_RESULT) == 0) {
			if (var(VAR_TEMP_1) == 1) {
				msgbox(format("Are you sure you want to play on {COLOR RED}Default{COLOR DARK_GRAY} difficulty?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == YES) {
					call(Zone0Sanctuary_EventScript_SetDefaultDifficulty)
					break
				}
			} else {
				call(Zone0Sanctuary_EventScript_SetDefaultDifficulty)
				break
			}
		} else {
			if (var(VAR_TEMP_1) == 1) {
				msgbox(format("Are you sure you want to play on {COLOR RED}Brutal{COLOR DARK_GRAY} difficulty?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == YES) {
					call(Zone0Sanctuary_EventScript_SetBrutalDifficulty)
					break
				}
			} else {
				call(Zone0Sanctuary_EventScript_SetBrutalDifficulty)
				break
			}
		}
	}
	msgbox(format("Would you like to listen to the game mode options explanations?"), MSGBOX_YESNO)
	if (var(VAR_RESULT) == YES) {
		msgbox(gText_Colress_GameModes)
		setvar(VAR_TEMP_2, 1)
	}
	while {
		if (var(VAR_TEMP_2) == 1) {
			msgbox(gText_Colress_RandomizerExplanation)
		}
		msgbox(format("Would you like to disable the {COLOR RED}Randomizer{COLOR DARK_GRAY} game mode?"), MSGBOX_YESNO)
		if (var(VAR_RESULT) == NO) {
			if (var(VAR_TEMP_2) == 1) {
				msgbox(format("Are you sure you want to enable the {COLOR RED}Randomizer{COLOR DARK_GRAY}?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == YES) {
					call(Zone0Sanctuary_EventScript_EnableRandomizer)
					break
				}
			} else {
				call(Zone0Sanctuary_EventScript_EnableRandomizer)
				break
			}
		} else {
			if (var(VAR_TEMP_2) == 1) {
				msgbox(format("Are you sure you want to disable the {COLOR RED}Randomizer{COLOR DARK_GRAY}?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == YES) {
					call(Zone0Sanctuary_EventScript_DisableRandomizer)
					break
				}
			} else {
				call(Zone0Sanctuary_EventScript_DisableRandomizer)
				break
			}
		}
	}
	while {
		if (var(VAR_TEMP_2) == 1) {
			msgbox(gText_Colress_NuzlockeExplained)
		}
		msgbox(format("Would you like to disable the {COLOR RED}Nuzlocke{COLOR DARK_GRAY} game mode?"), MSGBOX_YESNO)
		if (var(VAR_RESULT) == NO) {
			if (var(VAR_TEMP_2) == 1) {
				msgbox(format("Are you sure you want to enable {COLOR RED}Nuzlocke{COLOR DARK_GRAY} mode?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == YES) {
					call(Zone0Sanctuary_EventScript_EnableNuzlocke)
					break
				}
			} else {
				call(Zone0Sanctuary_EventScript_EnableNuzlocke)
				break
			}
		} else {
			if (var(VAR_TEMP_2) == 1) {
				msgbox(format("Are you sure you want to disable {COLOR RED}Nuzlocke{COLOR DARK_GRAY} mode?"), MSGBOX_YESNO)
				if (var(VAR_RESULT) == YES) {
					call(Zone0Sanctuary_EventScript_DisableNuzlocke)
					break
				}
			} else {
				call(Zone0Sanctuary_EventScript_DisableNuzlocke)
				break
			}
		}
	}
	if (flag(FLAG_RANDOMIZER_ON) == false && flag(FLAG_NUZLOCKE_ON) == false) {
		msgbox(format("You have chosen to disable all optional game modes."))
		playse(SE_PC_LOGIN)
		msgbox(format("{COLOR RED}Vanilla{COLOR DARK_GRAY} mode enabled."), MSGBOX_DEFAULT)
		waitse
		closemessage
	}
	if (var(VAR_TEMP_0)==1) {
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Allow me to show you each of the shops."))
		applymovement(1, Zone0Sanctuary_Movement_Colress_FirstShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_FirstShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkLeft)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: The top left shop is {COLOR RED}Tim's General Purpose Shop{COLOR DARK_GRAY}.\p"
		"Healing supplies, basic Pokéballs, and other common items are sold here."))
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkRight)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_SecondShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_SecondShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkRight)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: The top right shop is {COLOR RED}Silph Unique Item Shop{COLOR DARK_GRAY}.\p"
		"They sell a wide variety of held items and single use items such as Pokéball variations, evolution items, Berries, and so on."))
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkLeft)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_ThirdShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_ThirdShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkRight)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: The bottom right shop is {COLOR RED}Joy's Healing Shop{COLOR DARK_GRAY}.\p"
		"At the low cost of ¥1000, they will heal your entire party."))
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkLeft)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_FourthShop)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_FourthShop)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkLeft)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: The bottom left shop is {COLOR RED}Lelouch's Special Services Shop{COLOR DARK_GRAY}.\p"
		"They offer a range of Pokémon services, but only to customers who can pay the right price."))
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkRight)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_ToWarp)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_ToWarp)
		waitmovement(0)
		special(SpawnCameraObject)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkUp)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: In addition, you will have access to {COLOR RED}Zone 0{COLOR DARK_GRAY}.\pIf you would like to enter {COLOR RED}Zone 0{COLOR DARK_GRAY}, you can access it from any Sanctuary using this warp."))
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		applymovement(OBJ_EVENT_ID_CAMERA, Common_Movement_WalkDown)
		waitmovement(0)
		special(RemoveCameraObject)
		applymovement(1, Zone0Sanctuary_Movement_Colress_BackMid)
		applymovement(OBJ_EVENT_ID_PLAYER, Zone0Sanctuary_Movement_Player_BackMid)
		waitmovement(0)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Our tour has finished.\p"
		"These four shops will be available at every Sanctuary.\p"
		"As you progress through more Zones, more items and services will unlock.\p"
		"Also, it is highly recommended you stock up on any supplies before entering the next Zone."))
		delay(96)
	}
	if (flag(FLAG_RANDOMIZER_ON) == true) {
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: Because the {COLOR RED}Randomizer{COLOR DARK_GRAY} is on, you get a random starter."))
		setflag(FLAG_ZONE0B_ABILITY_CHANGE_USED)
		callnative(GiveRandomStarter)
		playfanfare(MUS_OBTAIN_ITEM)
		bufferleadmonspeciesname(0)
		message(format("{PLAYER} received the {STR_VAR_1}!"))
		waitmessage
		waitfanfare
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: How about a nickname for your {STR_VAR_1}?"), MSGBOX_YESNO)
		if (var(VAR_RESULT) == YES) {
			setvar(VAR_0x8004, 0)
			call(Common_EventScript_NameReceivedPartyMon)
		}
		goto(Zone0Sanctuary_EventScript_EndIntro)
	}
	if (flag(FLAG_BRUTAL_MODE_ON) == true) {
		msgbox(format("As a new challenger, you will receive a starter Pokémon.\p"
		"On Brutal difficulty, your choice is limited from the pool of possible starters to only three options.\p"
		"Choose carefully as these Pokémon are very rare."))
		setflag(FLAG_BOOSTED_IVS)
		special(ChooseStarter)
		waitstate
		clearflag(FLAG_BOOSTED_IVS)
		msgbox(format("{COLOR BLUE}Colress{COLOR DARK_GRAY}: How about a nickname for this wonderful Pokémon?"), MSGBOX_YESNO)
		if (var(VAR_RESULT) == YES) {
			setvar(VAR_0x8004, 0)
			call(Common_EventScript_NameReceivedPartyMon)
		}
		goto(Zone0Sanctuary_EventScript_EndIntro)
	} else {
		msgbox(format("As a new challenger, you will receive a starter Pokémon.\p"
		"You may have your choice of any of the generation 1-8 starter Pokémon.\p"
		"Choose carefully as these Pokémon are very rare."))
		goto(Zone0Sanctuary_EventScript_HandleStarterSelectionDefault)
	}
}

script Zone0Sanctuary_EventScript_SetDefaultDifficulty {
	setflag(FLAG_FULL_PREVIEW_ON)
	playse(SE_PC_LOGIN)
	msgbox(format("{COLOR RED}Default{COLOR DARK_GRAY} difficulty enabled."), MSGBOX_DEFAULT)
	waitse
	closemessage
	return
}

script Zone0Sanctuary_EventScript_SetBrutalDifficulty {
	setflag(FLAG_BRUTAL_MODE_ON)
	setflag(FLAG_SMART_WILD_AI_ON)
	playse(SE_PC_LOGIN)
	msgbox(format("{COLOR RED}Brutal{COLOR DARK_GRAY} difficulty enabled. Good luck."), MSGBOX_DEFAULT)
	waitse
	closemessage
	special(ReverseHiddenItemFlags)
	return
}

script Zone0Sanctuary_EventScript_DisableRandomizer {
	playse(SE_PC_OFF)
	msgbox(format("{COLOR RED}Randomizer{COLOR DARK_GRAY} game mode disabled."), MSGBOX_DEFAULT)
	waitse
	closemessage
	return
}

script Zone0Sanctuary_EventScript_EnableRandomizer {
	setflag(FLAG_RANDOMIZER_ON)
	playse(SE_PC_LOGIN)
	msgbox(format("{COLOR RED}Randomizer{COLOR DARK_GRAY} game mode enabled."), MSGBOX_DEFAULT)
	waitse
	closemessage
	return
}

script Zone0Sanctuary_EventScript_DisableNuzlocke {
	playse(SE_PC_OFF)
	msgbox(format("{COLOR RED}Nuzlocke{COLOR DARK_GRAY} mode disabled."), MSGBOX_DEFAULT)
	waitse
	closemessage
	return
}

script Zone0Sanctuary_EventScript_EnableNuzlocke {
	callnative(GlobalNuzlockeSet)
	setflag(FLAG_NUZLOCKE_ON)
	playse(SE_PC_LOGIN)
	msgbox(format("{COLOR RED}Nuzlocke{COLOR DARK_GRAY} mode enabled."), MSGBOX_DEFAULT)
	waitse
	closemessage
	return
}

