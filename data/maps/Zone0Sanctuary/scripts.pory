text Zone0Sanctuary_Text_Colress_Starters {
	format("As a new challenger, you will receive a starter Pokémon.\p"
	"You may have your choice of any of the generation 1-8 starter Pokémon.\p"
	"Choose carefully as these Pokémon are very rare.")
}

text Zone0Sanctuary_Text_Colress_StartersBrutal {
	format("As a new challenger, you will receive a starter Pokémon.\p"
	"On Brutal difficulty, your choice is limited from the pool of possible starters to only three options.\p"
	"Choose carefully as these Pokémon are very rare.")
}

text Zone0Sanctuary_Text_Colress_NiceChoice {
	format("Excellent choice.\p"
	"You can also re-nickname your Pokémon from the party menu.")
}

script Zone0Sanctuary_EventScript_EndIntro {
	if (var(VAR_TEMP_0) == 1) {
		msgbox(Zone0Sanctuary_Text_Colress_NiceChoice)
		delay(96)
		msgbox(format("I also have a beginner's kit with items and cash to get you started."))
		giveitem(ITEM_POKE_BALL, 30)
		giveitem(ITEM_POTION, 10)
		playfanfare(MUS_OBTAIN_ITEM)
		msgbox(format("Received ¥5000!"), MSGBOX_DEFAULT)
		waitfanfare
		closemessage
		playfanfare(MUS_OBTAIN_ITEM)
		msgbox(format("Received the {COLOR RED}Pokédex{COLOR DARK_GRAY}!"), MSGBOX_DEFAULT)
		waitfanfare
		closemessage
	} else {
		additem(ITEM_POKE_BALL, 30)
		additem(ITEM_POTION, 10)
	}
	setflag(FLAG_EXP_ALL_ON)
	setflag(FLAG_SYS_POKEDEX_GET)
	setflag(FLAG_SYS_NATIONAL_DEX)
	special(EnableNationalPokedex)
	special(SetUnlockedPokedexFlags)
	callnative(SetStarterFatefulEncounter)
	callnative(StartSetModeAndPokedex)
	initclock(1, 1)
	callnative(ReturnFromStartWallClock)
	setvar(VAR_ZONE, 1)
	buffernumberstring(0, VAR_ZONE)
	msgbox(gText_Colress_WhenUReady)
	applymovement(1, Common_Movement_Colress_WalkUp)
	waitmovement(1)
	setflag(FLAG_IS_DEBUGGING_SAVEFILE)
	releaseall
	end
}

script Zone0Sanctuary_EventScript_NextZone {
	lock
	faceplayer
	msgbox(gText_Colress_Greetings, MSGBOX_DEFAULT)
	multichoice(20, 0, MULTI_COLRESS_MENU, 0)
	switch (var(VAR_RESULT)) {
		case 0:
			buffernumberstring(0, VAR_ZONE)
			msgbox(gText_Colress_SureReadyToLeave, MSGBOX_YESNO)
			if (var(VAR_RESULT) == YES) {
				call(EventScript_LeavingSetup)
				warp(MAP_ZONE1A, 255, 16, 28)
				waitstate
			}
		case 1:
			goto(EventScript_Settings)
		case 2:
			goto(EventScript_Documentation)
	}
	goto(EventScript_WhenUReady)
}

