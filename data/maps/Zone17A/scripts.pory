script Zone17A_StartSpiritombBattle {
	removeitem(ITEM_ODD_KEYSTONE)
	msgbox("{PLAYER} placed the Odd Keystone.", MSGBOX_AUTOCLOSE)
	delay(48)
	setwildbattle(SPECIES_SPIRITOMB, 45, ITEM_NONE)
	playmoncry(SPECIES_SPIRITOMB, 2)
	delay(40)
	waitmoncry
	dowildbattle
	specialvar(VAR_RESULT, GetBattleOutcome)
	if (var(VAR_RESULT) == B_OUTCOME_RAN) {
		msgbox("Spiritomb disappeared…")
	}
	if (var(VAR_RESULT) == B_OUTCOME_PLAYER_TELEPORTED) {
		msgbox("Spiritomb disappeared…")
	}
	release
	end
}

